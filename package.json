{
  "name": "@hi85/renovate-config",
  "version": "1.1.1",
  "description": "My shareable config for Renovate",
  "author": "hi85",
  "license": "MIT",
  "homepage": "https://github.com/hi85gh/renovate-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hi85gh/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/hi85gh/renovate-config/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [],
  "keywords": [
    "npm",
    "renovate"
  ],
  "scripts": {
    "release": "standard-version",
    "format": "prettier --write \"**/*.{json,md,yml}\"",
    "test": "renovate-config-validator"
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "renovate": "^24.11.3",
    "standard-version": "^9.1.0"
  },
  "renovate-config": {
    "default": {
      "description": "hi85's default config",
      "extends": [
        "config:base",
        ":label(renovate)",
        ":prHourlyLimitNone",
        ":rebaseStalePrs",
        ":timezone(Asia/Tokyo)"
      ],
      "npm": {
        "commitMessageTopic": "{{prettyDepType}} {{depName}}",
        "extends": [
          ":maintainLockFilesMonthly",
          ":unpublishSafe"
        ],
        "rangeStrategy": "bump"
      }
    },
    "automergeAllNonMajor": {
      "extends": [
        "group:allNonMajor",
        ":automergeMinor"
      ]
    },
    "scheduleWeekly": {
      "schedule": [
        "after 6am on Monday",
        "before 9am on Monday"
      ]
    },
    "semanticCommitTypeAllChore": {
      "extends": [
        ":semanticCommitTypeAll(chore)",
        ":semanticCommits"
      ]
    }
  }
}
